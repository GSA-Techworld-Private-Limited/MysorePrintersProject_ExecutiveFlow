<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start|center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        style="@style/txtSemiBolpoppinsSemibold28"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        style="@style/txtSemiBolpoppinsMedium18"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:layout_marginTop="46dp"
        style="@style/groupStylecornerRadius_3"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="36dp"
        android:inputType="textPassword"
        style="@style/groupStylecornerRadius_3"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_marginTop="8dp"
       style="@style/txtInterMedium12"
       android:layout_gravity="center_horizontal"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Login"
        android:gravity="center"
        android:layout_marginTop="46dp"
        style="@style/txtbuttonpoppinsmidum22"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not have account? Sign Up"
        android:layout_marginTop="36dp"
        style="@style/txtpoppinsRegular12"/>



    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="36dp"
        android:id="@+id/forview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="175dp"
            android:layout_gravity="center"
            android:background="@color/black_01"
            android:layout_height="1dp"/>


        <TextView
            android:text="OR"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginStart="5dp"
            android:layout_width="175dp"
            android:layout_gravity="center"
            android:background="@color/black_01"
            android:layout_height="1dp"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="36dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook_logo"
            android:layout_marginStart="16dp" />

    </LinearLayout>
</LinearLayout>
