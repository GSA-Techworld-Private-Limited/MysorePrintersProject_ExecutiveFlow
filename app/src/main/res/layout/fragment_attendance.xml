<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.homefragment.HomeFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearHeader"
        android:layout_gravity="top|start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylebluegray_9011">

        <LinearLayout
            android:id="@+id/linearRowsettings"
            android:layout_height="wrap_content"
            android:layout_marginBottom="59dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="23dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView android:id="@+id/imageSettings"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/menu_icon"
                tools:ignore="ContentDescription"
                tools:src="@drawable/menu_icon"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="219dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/imageSettings1"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/notification_icon"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/notification_icon"/>


                <ImageView android:id="@+id/imageSettings2"
                    android:layout_height="30dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_image"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/profile_image"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Attendance"
            style="@style/txtSemiBolpoppinsMedium28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>



    <LinearLayout android:id="@+id/linearColumntotalincome"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        style="@style/groupStyleblue_802cornerRadius">


        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <androidx.appcompat.widget.AppCompatButton
                    android:text="Check In"
                    android:layout_width="250dp"
                   android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    style="@style/txtCheckButton1"
                    android:id="@+id/checkIn"
                    android:layout_height="47dp"/>



                <ProgressBar
                    android:progressBackgroundTint="@color/blue"
                    android:visibility="gone"
                    android:id="@+id/progressbar"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="Check Out"
                    android:id="@+id/checkout"
                    android:layout_width="250dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    style="@style/txtCheckButton1"
                    android:layout_height="47dp"/>



                <androidx.cardview.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="10dp"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/location_icon"
                        android:layout_width="20dp"
                        android:layout_height="23dp"/>

                    <LinearLayout
                        android:layout_gravity="start"
                        android:layout_marginStart="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="25dp"
                            style="@style/txtpoppinssemibold16"
                            android:text="Current Location "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_marginTop="20dp"
                            style="@style/txtpoppinmedium14"
                            android:text="New cozy PG , 5th Phase , JP Nagar,\n Bangalore, 560078"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="10dp"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/location_icon"
                        android:layout_width="20dp"
                        android:layout_height="22dp"/>

                    <LinearLayout
                        android:layout_gravity="start"
                        android:layout_marginStart="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="25dp"
                            style="@style/txtpoppinssemibold16"
                            android:text="Total Distance Travelled :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/totalkmtravelled"
                            android:layout_marginTop="20dp"
                            style="@style/txtpoppinmedium14"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    </FrameLayout>

    <!-- Navigation view for the drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/white_A700"
        app:itemIconTint="@color/white_A700"
        app:headerLayout="@layout/nav_header"
        android:background="@color/shade_blue"
        app:menu="@menu/nav_menu_gation"/>

</androidx.drawerlayout.widget.DrawerLayout>